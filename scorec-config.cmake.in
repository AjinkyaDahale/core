include(CMakeFindDependencyMacro)
# we will use find_dependency, but we don't want to force
# our users to have to specify where all of our dependencies
# were installed; that defeats the whole point of automatically
# importing dependencies.
# since the documentation for find_dependency() doesn't mention
# a PATHS argument, we'll temporarily add the prefixes to
# CMAKE_PREFIX_PATH.
set(SCOREC_DEPS "@DEPS@")
set(SCOREC_PREFIX_PATH "${CMAKE_PREFIX_PATH}")
set(CMAKE_PREFIX_PATH "@DEP_PREFIXES@;${CMAKE_PREFIX_PATH}")
foreach(dep IN LISTS SCOREC_DEPS)
  find_dependency(${dep})
endforeach()
set(CMAKE_PREFIX_PATH "${SCOREC_PREFIX_PATH}")
set(SCOREC_TARGETS "@TARGETS@")
foreach(target IN LISTS SCOREC_TARGETS)
  include(${CMAKE_CURRENT_LIST_DIR}/${target}-targets.cmake)
endforeach()
